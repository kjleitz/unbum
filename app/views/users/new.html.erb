<div class="row">
  <div class="offset-md-2 col-md-8">
    <h2>sign up</h2>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, required: true, class: 'form-control', autocomplete: 'username' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, required: true, class: 'form-control', autocomplete: 'current-password' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, required: true, class: 'form-control', autocomplete: 'current-password' %>
      </div>
      <%= f.submit 'log in', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
